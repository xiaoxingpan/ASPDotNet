@page "{id:int}"
@model MidtermTodos.Pages.EditModel
@{
}

<div class="container">
    <h3>Edit a todo</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" class="p-2 m-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group pb-3">
                    <label asp-for="TodoToUpdate.Id" class="control-label pb-2"></label>
                    <input asp-for="TodoToUpdate.Id" readonly class="form-control-plaintext" />
                </div>

                <div class="form-group pb-3">
                    <label asp-for="TodoToUpdate.Task" class="control-label pb-2"></label>
                    <input asp-for="TodoToUpdate.Task" class="form-control" />
                    <span asp-validation-for="TodoToUpdate.Task" class="text-danger"></span>
                </div>
                <div class="form-group pb-3">
                    <label asp-for="TodoToUpdate.DueDate" class="control-label pb-2"></label>
                    <input asp-for="TodoToUpdate.DueDate" class="form-control" />
                    <span asp-validation-for="TodoToUpdate.DueDate" class="text-danger"></span>
                </div>
                <div class="form-check pb-3">
                    <label asp-for="TodoToUpdate.IsDone" class="form-check-label pb-2"></label>
                    <input type="checkbox" asp-for="TodoToUpdate.IsDone" class="form-check-input" />
                    <span asp-validation-for="TodoToUpdate.IsDone" class="text-danger"></span>
                </div>
                <div class="form-group row text-center pt-3">
                    <div class="col-md-6 mx-auto"><input type="submit" value="Save" class="btn btn-primary" /></div>
                    <div class="col-md-6 mx-auto"><a class="btn btn-secondary" asp-page="/Index">Back to
                            List</a></div>
                </div>
            </form>
        </div>
    </div>