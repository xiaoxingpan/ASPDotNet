@page
@model MyFriends.Pages.AddModel
@{
    ViewData["Title"] = "Add";
}

<div class="container">
    <h3>Create</h3>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form method="post" class="p-2 m-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group pb-3">
                    <label asp-for="NewFriend.Name" class="control-label pb-2"></label>
                    <input asp-for="NewFriend.Name" class="form-control" />
                    <span asp-validation-for="NewFriend.Name" class="text-danger"></span>
                </div>
                <div class="form-group pb-3">
                    <label asp-for="NewFriend.Age" class="control-label pb-2"></label>
                    <input asp-for="NewFriend.Age" class="form-control" />
                    <span asp-validation-for="NewFriend.Age" class="text-danger"></span>
                </div>
                <div class="form-group row text-center pt-3">
                    <div class="col-md-6 mx-auto"><input type="submit" value="Create" class="btn btn-primary" /></div>
                    <div class="col-md-6 mx-auto"><a class="btn btn-secondary" asp-page="FriendList">Back to
                            List</a></div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}